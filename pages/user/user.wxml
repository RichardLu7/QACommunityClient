<import src="../../page/u-template/u-template.wxml"></import>
<import src="../../page/p-template/p-template.wxml"></import>
<view class="container">
  <view class="user flex-wrp">
    <view class="avatar flex-item">
      <image class="userinfo-avatar" src="/images/avatar/1.png" background-size="cover"></image>
    </view>
    <view class="user-info flex-item">
      <text class="userinfo-nickname">{{user_key.user_id.nickname}}</text>
      <text class="edit">查看或编辑个人主页</text>
    </view>
  </view>
  <view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">
      关注用户
    </view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">
      关注问题
    </view>
  </view>
  <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
    <!-- 用户列表 -->
    <swiper-item>
      <block wx:for="{{user_key}}" wx:for-item="item">
        <template is="user" data="{{...item}}" />
      </block>
    </swiper-item>
    <!-- 问题列表 -->
    <swiper-item>
      <scroll-view scroll-y="true" class="container notify withtab" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
        <block wx:for="{{problem_key}}" wx:for-item="item">
          <view bindtap="onDetails" data-ID="{{item.user_id}}">
            <template is="problem" data="{{...item}}" />
          </view>
        </block>
      </scroll-view>
    </swiper-item>
  </swiper>
</view>